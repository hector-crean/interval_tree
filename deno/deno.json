{
  "imports": {
    "std/": "https://deno.land/std@0.207.0/"
  },
  "tasks": {
    "dev": "deno run --allow-read --watch main.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  }
}
